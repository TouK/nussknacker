@import "./_variables.styl"

grabbingMixin()


grabMixin()
  cursor: -moz-grab
  cursor: -webkit-grab
  cursor: grab
  &:active
    cursor: -moz-grabbing;
    cursor: -webkit-grabbing;
    cursor: grabbing;

#toolbox
  font-size 14px
  font-weight 600
  padding 0
  padding-bottom .5em
  min-height: 2.5em

  .tree-view
    background-color #3e3e3e

  .tree-view_item
    background-color buttonBkgColor
    border 1px solid alpha(listBorderColor, 50%)
    cursor: pointer
    display flex
    padding 0 5px
    height 28px
    line-height @height

    &:hover
      background-color toolHoverBkgColor
      color toolHoverColor

  .tree-view_arrow
    cursor inherit

  .toolWrapper
    background-color #464646
    font-weight 400
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis

  .tool
    margin-bottom -1px
    height 28px
    padding 0 5px
    line-height @height
    border 1px solid listBorderColor

    &.disabled
      opacity 0.4
      cursor: not-allowed !important

    &:not(.disabled)
      grabMixin()
      color: #b3b3b3

      &:hover
        background-color darken(toolHoverBkgColor, 7%)
        color toolHoverColor

        .toolIcon
          filter: brightness(0.8)
  .toolIcon
    height 16px
    width 16px
    display inline-flex
    vertical-align middle
    filter: brightness(0.7)
    margin-right 5px
    margin-bottom 2px
.group-label
  width 95%
