@import "./_variables.styl"

.togglePanel
  position: absolute
  bottom: 0
  font-size 0
  line-height 0
  height: 25px
  width: 25px
  transition: left 0.5s ease, right 0.5s ease;
  z-index: 100
  cursor: pointer

  &.RIGHT
    right: 0

    &.is-opened
      right: panelWidth

  &.LEFT
    left: 0
    &.is-opened
      left: panelWidth
