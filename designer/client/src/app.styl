@require "./stylesheets/_variables.styl"
@require "./stylesheets/bootstrap.styl"

html,
body
  margin: 0
  padding: 0
  height: 100dvh
  background: graphBkgColor
  color: defaultTextColor
  // Material-UI uses rem units for the font size.
  // Revert (changed by bootstrap) the browser <html> element default font size.
  font-size: 16px
  overflow: hidden

.notification-dismiss 
  display: none !important

.notifications-wrapper
  position absolute
  bottom 25px
  right 25px
  z-index 10000

.notification
  font-family "Open Sans"
  font-size: 16px

.container-fluid
  padding-left: containerPadding
  padding-right: containerPadding

.hide
  display none
  
  .details
    display inline-block

.label-info
  background-color labelBkgColor
  padding 0 3px
  margin: 0 4px;
  color #ccc
  font-weight 600
  font-size 9px

.typeSuggestion
  float: right
  opacity: 0.7

.modalContentDark
  h3
    font-size 1.3em


.full-dark
  width: 100%
  height: 100%
  background-color modalBkgColor

.ace_hidden-cursors .ace_cursor {
  opacity: 0.0;
}
.ace_editor.ace_autocomplete {
  width: 400px
}
// Without those settings below, type (meta) shade method/variable name (value)
.ace_autocomplete .ace_line > * {
  flex: 0 0 auto;
}
.ace_autocomplete .ace_line .ace_ {
  flex: 0 0 auto;
  overflow: auto;
}

.ace_defaultMethod
  &
  & + .ace_completion-meta
    color #ffe1b9

.ace_classMethod
  &,
  & + .ace_completion-meta
    color #708687

.ace_tooltip.ace_doc-tooltip
  font-size 0.7em
  .function-docs
    white-space pre-wrap
    >hr
      margin-top 0px
      margin-bottom 0px
    p
      margin-top 5px
      margin-bottom 5px

.services
  height 100%
  overflow-y auto

.queryServiceResults
  margin-left 30px
  margin-right 30px
  font-size 15px
  hr
    border-top: 1px solid black;
  .alert
    font-size 15px
  p
    font-size 25px
    color black

.big-blue-button
  margin: 45px 50px
  width 360px
  min-width: 300px
  height: formControllHeight
  background-color: buttonBlueBkgColor
  color: buttonBlueColor
  display flex
  align-items: center
  justify-content: center
  font-family 'Open Sans'
  font-size: 21px
  font-weight: 600
  border-radius: 0
  &:hover
    color buttonBlueColor
    background: lighten(buttonBlueBkgColor, 25%)
  &:focus
    color buttonBlueColor
  #add-icon
    width: 20px
    margin-left: 20px
    &:hover
      background: processesHoverColor