linkColor = #B3B3B3

.graph-export
    color: white

    [no-export], [noExport]
    .connection-wrap
    .marker-arrowheads
        display none

    .arrow-marker path
        fill linkColor

    .joint-theme-default
        .connection
            stroke linkColor
            fill none

        .connection
        .joint-port-body
        &.joint-type-esp-model rect
            stroke-width 2px

        [disabled="true"]
            opacity 1
            fill gray