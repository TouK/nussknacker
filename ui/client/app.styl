@require "stylesheets/_variables.styl"
@require "stylesheets/bootstrap.styl"

html,
body
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  color: defaultTextColor
  font-size: defaultFontSize
  overflow: hidden

#app-container
  position: absolute
  top: 0
  width: 100%
  height: 100%

  .top-left-button
    position: absolute
    left: 0
    top: 20px
    img
      cursor: pointer
      margin: ((menuBarHeight - 30px)/2) 10px ((menuBarHeight - 35px)/2) 20px
    span
      color white
      font-size 30px
      cursor: pointer

  main
    position: absolute
    top: 0
    bottom: 0
    width: 100%
    padding-top: menuBarHeight

ul.breadcrumbs-list
  margin: 0
  padding: 0
  li
    display: inline-block
    margin-right: 20px
    a:not(.breadcrumb-active)
      font-weight: bold
      margin-right: 20px
    a.breadcrumb-active
        text-decoration: none
        cursor: default

.container-fluid
  padding-left: containerPadding
  padding-right: containerPadding

.hide
  display none

processActivityList()
  font-size 10px
  margin  15px 0
  padding 0
  .header
    span
      color commentHeaderColor
      &.date
        color commentHeaderColor
        font-style italic
    p
      font-style italic
      color panelTitleTextColor
  .footer
    font-style italic
    p
      margin-bottom 0
  p
    font-size 12px

.process-comments
  padding 0 13px
  .process-comments-list
    processActivityList()
    .header
      width 100%
      .remove
        float right
        &:hover
          cursor pointer
          opacity 0.5
  .add-comment-panel
    font-size 12px
    padding-bottom 10px
    display flex
    flex-direction column
    textarea
      width 100%
      height formControllHeight
      font-size 12px
      font-weight 400
      border-radius 3px
      border none
      background-color commentBkgColor
      padding 4px 6px
      resize none
      &:focus
        outline-color: defaultTextColor
    button
      font-size 12px
      background-color #333
      border none
      width 20%
      align-self flex-end
      margin-top 5px
      padding 3px 0
      border-radius 3px
      cursor pointer
      &:hover
        background-color #3d3d3d


.process-attachments
  cursor default
  padding 0 13px
  display grid
  .process-attachments-list
    processActivityList()

    .attachment-section
      display flex
      .attachment-details
        margin-left 8px
        word-break break-word

  .details
    display inline-block

  .download-attachment
    margin-right 5px
    cursor: pointer
    display inline-block
    font-size 25px

  .add-attachments
    font-size 12px
    margin-bottom 15px
    height: 90px
    border none
    &:hover .attachment-drop-zone
      background-color lighten(#333, 5%)
    .attachments-container
      height 100%
    .attachment-drop-zone
      width 100%
      height 100%
      font-size 12px
      font-weight normal
      padding 0
      cursor: pointer
      padding-top 6
      margin-bottom 5
      text-align center
      transition: background-color 0.2s
      background-color #333
      svg
        width 40px
        margin auto
        display inline-block
    .attachment-button-text
      cursor pointer
      text-align center
      margin-top -45px
    .attachment-button
      border-radius 3px
      svg
        margin-top 16px
        width 22px
        height 22px
.label-info
  background-color labelBkgColor
  padding 0 3px
  margin: 0 4px;
  color #ccc
  font-weight 600
  font-size 9px

.typeSuggestion
  float: right
  opacity: 0.7

.modalContentDark
  input
  textarea
    width 90%
    font-size 12px
    font-weight lighter
    border 1px solid commentBorderColor
    background-color commentBkgColor
  .confirmationButtons
    float : right
    margin-right : 10


.full-dark
  width: 100%
  height: 100%
  background-color modalBkgColor


.ace_hidden-cursors .ace_cursor {
  opacity: 0.0;
}
.ace_editor.ace_autocomplete {
  width: 400px
}

.ace_tooltip.ace_doc-tooltip
  .function-docs
    white-space pre-wrap
    >hr
      margin-top 0px
      margin-bottom 0px
    p
      margin-top 5px
      margin-bottom 5px

.queryServiceResults
  margin-left 30px
  margin-right 30px
  font-size 15px
  hr
    border-top: 1px solid black;
  .alert
    font-size 15px
  p
    font-size 25px
    color black

.big-blue-button
  margin: 45px 50px
  width 360px
  min-width: 300px
  height: formControllHeight
  background-color: buttonBlueBkgColor
  color: buttonBlueColor
  display flex
  align-items: center
  justify-content: center
  font-family 'Open Sans'
  font-size: 21px
  font-weight: 600
  border-radius: 0
  &:hover
    color buttonBlueColor
    background: lighten(buttonBlueBkgColor, 25%)
  &:focus
    color buttonBlueColor
  #add-icon
    width: 20px
    margin-left: 20px
    &:hover
      background: processesHoverColor

.error-template
  text-align: center
  position: absolute;
  top: 50%;
  left:50%;
  transform: translate(-50%,-50%);

  h1
    font-size: 96px

  h2
    font-size: 64px

  .error-actions
    margin-top:15px
    margin-bottom:15px

  .error-actions .btn
    margin-right:10px

  .error-details
    font-size: 24px

    .big-blue-button
      margin: 45px auto
