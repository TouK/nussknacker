@import "stylesheets/_variables.styl"

html,
body
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  font-family: _fontFamily !important
  color: defaultTextColor
  font-size: defaultFontSize
  overflow: hidden

.fade-enter
  opacity: 0.01

.fade-enter.fade-enter-active
  opacity: 1
  transition: opacity 300ms ease-in

.fade-exit
  opacity: 1

.fade-exit.fade-exit-active
  opacity: 0.01
  transition: opacity 300ms ease-in


#app-container
  position: absolute
  top: 0
  width: 100%
  height: 100%

  .top-left-button
    position: absolute
    left: 0
    top: 20px
    img
      cursor: pointer
      margin: ((menuBarHeight - 30px)/2) 10px ((menuBarHeight - 35px)/2) 20px
    span
      color white
      font-size 30px
      cursor: pointer

  main
    position: absolute
    top: 0
    bottom: 0
    width: 100%
    padding-top: menuBarHeight

ul.breadcrumbs-list
  margin: 0
  padding: 0
  li
    display: inline-block
    margin-right: 20px
    a:not(.breadcrumb-active)
      font-weight: bold
      margin-right: 20px
    a.breadcrumb-active
        text-decoration: none
        cursor: default

.container-fluid
  padding-left: containerPadding
  padding-right: containerPadding

.hide
  display none

processActivityList()
  width 100%
  font-size 10px
  float left
  padding 10px 5px 0 0
  .header
    display inline-block
    span
      margin-right 5px
      &.date
        color panelTitleTextColor
        font-style italic
      &.comment-header
        color #808080
    p
      font-style italic
      color panelTitleTextColor
  .footer
    font-style italic
    p
      margin-bottom 0
  p
    font-size 12px

.process-comments
  margin-bottom 10px
  .process-comments-list
    processActivityList()
    .header
      width 100%
      .remove
        float right
        &:hover
          cursor pointer
          opacity 0.5
    .comment-under-line
      width 90%
      margin-left 0
  .add-comment
    font-size 12px
    textarea
      width 90%
      height 45px
      font-size 12px
      font-weight lighter
      border 1px solid commentBorderColor
      background-color commentBkgColor
      &:focus
        outline-color: defaultTextColor
    button
      margin-top 10px


.process-attachments
  cursor: default
  margin-bottom 10px
  .process-attachments-list
    processActivityList()

  .details
    display inline-block

  .download-attachment
    margin-right 5px
    cursor: pointer
    display inline-block
    font-size 25px

  .add-attachments
    font-size 12px
    display inline-block
    width 90%
    height: 90px
    border 1px solid buttonBorderColor
    .dropZone
      width 100%
      height 100%
      font-size 12px
      font-weight normal
      padding 0
    .attachment-button-text
      margin-top -50px
      &:hover
        background-color buttonBkgHover

.label-info
  background-color labelBkgColor

.typeSuggestion
  float: right
  opacity: 0.7

.modalContentDark
  input
  textarea
    width 90%
    font-size 12px
    font-weight lighter
    border 1px solid commentBorderColor
    background-color commentBkgColor
    &:focus
      outline-color: defaultTextColor


.full-dark
  width: 100%
  height: 100%
  background-color modalBkgColor


.ace_hidden-cursors .ace_cursor {
  opacity: 0.0;
}
.ace_editor.ace_autocomplete {
  width: 400px
}

.ace_tooltip.ace_doc-tooltip
  .function-docs
    white-space pre-wrap
    >hr
      margin-top 0px
      margin-bottom 0px
    p
      margin-top 5px
      margin-bottom 5px

.queryServiceResults
  margin-left 30px
  margin-right 30px
  font-size 15px
  hr
    border-top: 1px solid black;
  .alert
    font-size 15px
  p
    font-size 25px
    color black

.error-template
  text-align: center
  position: absolute;
  top: 50%;
  left:50%;
  transform: translate(-50%,-50%);

  h1
    font-size: 96px

  h2
    font-size: 64px

  .error-actions
    margin-top:15px
    margin-bottom:15px

  .error-actions .btn
    margin-right:10px

  .error-details
    font-size: 24px

