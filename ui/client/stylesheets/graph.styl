  font-size: 14px

modalContent(modalBkgColor,errorColor,modalLabelTextColor,testResultsColor,modalInputTextColor,processesHoverColor,hrColor,modalInputBkgColor)
  overflow auto
  background-color: modalBkgColor
  clear both
  labelWidth = 20%
  .warning
    margin 15px
    color errorColor
    .icon
      float left
      width: 30px
      height: 30px
  .node-table
    margin: 0 25px
    .node-table-body
      clear: both
    .node-row
      margin-bottom: 14px
      margin-top: 14px
      display flex
    .movable-row
      display flex
      margin-top 0
      margin-bottom 14px
    .node-label
      color modalLabelTextColor
      width labelWidth
      display inline-block
      vertical-align sub
      margin-top 9px
      font-size 12px
      font-weight 700
      .labelFooter
        font-weight 500
        opacity: 0.7
      span
        margin-top: 10px
        margin-left: 10px
        font-size: 15px
        &:hover
          cursor pointer
    .node-block
      &.removed
        border 1px solid errorColor
        padding 5px
      &.added
        border 1px solid okColor
        padding 5px
    .node-value
      width: 95% - labelWidth
      display: inline-block
      color: #686868
      textarea
        overflow hidden
        height auto
      espCheckbox(20px)
      input[type='checkbox']
        margin-top 7px
        margin-bottom 7px
      &.partly-hidden
        textarea
          height 100px !important
      &.node-value-select
        .node-value-select__control
          background-color modalInputBkgColor
          max-height 35px
          min-height 35px
          border: 0
          border-radius: 0
          color modalInputTextColor
          box-shadow: 0
        .node-value-select__control--is-focused
          outline 2px solid focusColor!important;
          outline-offset -1px!important;
        .node-value-select__single-value
          common-node-input(10px)
        .switchable
          width: 100% - 40px
        .node-value-select__input
          //TODO: input hides partially due to padding...
          common-node-input(10px)
        .node-value-select__value-container--has-value
          background-color modalInputBkgColor
          color modalInputTextColor
        .node-value-select__menu
          z-index: 2
          border-radius: 0
        .node-value-select__menu-list
          padding-top: 0
          padding-bottom: 0
        .node-value-select__menu-list::-webkit-scrollbar
          width: 5px
          height: 0px
        .node-value-select__menu-list::-webkit-scrollbar-track
          background: buttonBorderColor
        .node-value-select__menu-list::-webkit-scrollbar-thumb
          background: #888
        .node-value-select__menu-list::-webkit-scrollbar-thumb:hover
          background: #555
        .node-value-select__option
          common-node-input(10px)
          height: 25px
          line-height @height
          border: 1
          border-radius: 0
          &:hover
           background-color darken(focusColor, 50%)
        .node-value-select__option--is-selected
          background-color: focusColor
        .node-value-select__option--is-focused
          background-color: darken(focusColor, 50%)
      &.node-value-type-select
        width: 100%
        max-height: 35
        &.switchable
          width: 70%
      &.switchable
        width: 70%

    .node-error
      width: 100%
      color: errorColor
      font-size: 14px
      font-weight: 400
      margin-bottom: 10px
      margin-top: 10px
    .node-tip
      margin-left 10px
      width 15px
      height 15px
      &.node-error-tip
        margin-right 10px
        float right
    .node-test-results
      border: 1px solid testResultsColor
      padding: 5px
    .node-input
      height: 35px
      common-node-input(10px)
    .read-only
      height: 40px
      padding: 0
      border: none
      color: modalInputTextColor
      font-weight: 400
      font-size: 14px
      display: inline-block
      vertical-align: top
