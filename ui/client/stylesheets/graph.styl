common-node-input(padding)
  width: 100%
  padding: 0 padding
  border: none
  background-color: modalInputBkgColor
  color: modalInputTextColor
  font-weight: 400
  font-size: 14px

modalContent(modalBkgColor,warningColor,modalLabelTextColor,testResultsColor,modalInputTextColor,processesHoverColor,hrColor,modalInputBkgColor)
  overflow auto
  max-height modalContentMaxHeight
  background-color: modalBkgColor
  labelWidth = 20%
  .warning
    margin 15px
    color warningColor
    .icon
      float left
      width: 30px
      height: 30px
  .node-table
    margin: 0 30px
    .node-table-body
      clear: both
    .node-row
      margin-bottom: 8px
      margin-top: 7px
    .node-label
      color: modalLabelTextColor
      width: labelWidth
      display: inline-block
      vertical-align: top
      padding-top: 10px
      font-size: 12px
      font-weight: 700
      .labelFooter
        font-weight 500
        opacity: 0.7
      span
        margin-top: 10px
        margin-left: 10px
        font-size: 15px
        &:hover
          cursor pointer
    .node-block
      &.removed
        border 1px solid warningColor
        padding 5px
      &.added
        border 1px solid okColor
        padding 5px
    .node-value
      width: 100% - labelWidth
      display: inline-block
      color: #686868
      textarea
        overflow hidden
      espCheckbox(20px)
      input[type='checkbox']
        margin-top 10px
        margin-bottom 10px
      &.partly-hidden
        textarea
          height 100px !important
      &.marked
        border 2px solid markColor
      &.node-value-select
        .node-value-select__control
          background-color modalInputBkgColor
          border: 0
          border-radius: 0
          border-bottom: 1px solid gray;
          color modalInputTextColor
          box-shadow: 0
        .node-value-select__control--is-focused
          boder-width: 0
          box-shadow: 0 0 0 1px gray
        .node-value-select__single-value
          common-node-input(10px)
        .node-value-select__input
          //TODO: input hides partially due to padding...
          common-node-input(10px)
        .node-value-select__value-container--has-value
          background-color modalInputBkgColor
          color modalInputTextColor
        .node-value-select__menu
          z-index: 2
          border-radius: 0
          border-bottom: 1px solid gray;
        .node-value-select__menu-list
          padding-top: 0
          padding-bottom: 0
        .node-value-select__option
          common-node-input(20px)
          height: 25px
          border: 1
          border-radius: 0
          border-bottom: 1px solid gray;
        .node-value-select__option--is-selected
          background-color: modalInputBkgColor
        .node-value-select__option--is-focused
          //TODO: better color/variable?
          background-color: commentBorderColor
    .node-error
      width: 100%
      color: warningColor
      font-size: 14px
      font-weight: 400
      margin-bottom: 10px
      margin-top: 10px
    .node-tip
      margin-left: 10px
      width: 15px
      height: 15px
    .node-test-results
      border: 1px solid testResultsColor
      padding: 5px
    .node-input
      height: 40px
      common-node-input(20px)
    .node-read-only-input
      height: 40px
      padding: 0 20px
      border: none
      color: modalInputTextColor
      font-weight: 400
      font-size: 14px
      display: inline-block
      vertical-align: top
      padding-top: 10px
      .labelFooter
        font-weight 500
        opacity: 0.7
      span
        margin-top: 10px
        margin-left: 10px
        font-size: 15px
        &:hover
          cursor pointer
    .node-group
      padding-top 15px
      width: 100%
      padding-left: 50px
      .node-label
        text-transform: none
    textarea.node-input
      resize: vertical
      line-height: 1.5
      padding-top: 10px
      padding-bottom: 10px
    input[type=checkbox].node-input
      height: 20px
    &.node-editable
      .node-input
        border-bottom: 1px solid gray
    .testResultDownload
      padding-left: 15px
      font-size: 14
      a
        color: modalLabelTextColor
        text-decoration none
        &:hover
          color: processesHoverColor
  hr
    border-top 1px solid hrColor
    margin-top 10px
    margin-bottom 10px

