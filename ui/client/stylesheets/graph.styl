node-highlight(strokeColor, backgroundFill)
  .body
    stroke: strokeColor
    stroke-width: 2px
  .background
    fill: backgroundFill

.node-validation-error
  node-highlight(#a94442, #f2dede)

.node-grouping
  node-highlight(#5ba935, #caf2d6)

.node-focused
  node-highlight(#0058a9, #e6ecff)

.ReactModal__Overlay
  z-index: 100
  background-color: rgba(23, 22, 21, 0.3) !important //fixme why important?


espCheckbox(checkboxWidth)
  input[type='checkbox']
    text-rendering optimizeSpeed
    width checkboxWidth
    height checkboxWidth
    margin 0
    margin-right 1px
    display block
    position relative
    cursor pointer

  input[type='checkbox']:after
    content ""
    vertical-align middle
    text-align center
    line-height checkboxWidth
    position absolute
    cursor pointer
    height checkboxWidth
    width checkboxWidth
    font-size checkboxWidth - 6
    box-shadow inset 0px 1px 1px #000, 0px 1px 0px #444
    background #45484d

  input[type='checkbox']:checked
    &:after
      background #202020
      content '\2714'
      color #fff

.espModal
  max-height modalMaxHeight
  max-width modalMaxWidth
  position: absolute;
  background modalBkgColor
  background-color modalBkgColor
  outline: none;
  border-radius: 0px;
  padding: 0px;
  top: 50px
  left: 20%;
  right: 20%;
  margin-left auto
  margin-right auto
  border: 2px solid modalBorder
  box-shadow: 0 0 8px 0 rgba(0,0,0,0.2)
  .confirmationButtons
    text-align center
    button
      margin-top 80px
      margin-bottom 10px
      margin-left 0px
    button:first-child
      margin-right 20px
    button:nth-child(2)
      margin-left 20px

.confirmationModal
  width 575px
  font-size 18px
  font-weight lighter
  text-align center
  p
    margin-top 30px


.compareModal
  max-width 1000
  font-size: 15px
  font-weight: 700
  .notPresent
    margin-bottom: 50px
    margin-top: 50px
    margin-left 30px
    margin-right 30px
    color: modalLabelTextColor
  .versionHeader
    margin-bottom: 15px
    margin-top: 15px
    margin-left 30px
