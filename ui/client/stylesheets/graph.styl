    textarea.node-input
      resize: vertical
      line-height: 1.5
      padding-top: 7px
      padding-bottom: 7px
    input[type=checkbox].node-input
      height: 20px
    &.node-editable
      .node-input-with-error
        outline 1px solid errorColor !important
        border-radius 2px
    .testResultDownload
      padding-left: 15px
      font-size: 14
      a
        color: modalLabelTextColor
        text-decoration none
        &:hover
          color: processesHoverColor
