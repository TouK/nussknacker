  font-weight 600
  height: modalHeaderHeight
  min-width modalHeaderWidth
  display inline-block
  span
    display inline-block
    margin-left 15px
    margin-top 3px
  span::after
    content: "\00a0\00a0"
  .docsIcon
    background-color modalBkgColor
    margin-left 15px
    float right
    fill: docsIconColor
    svg
