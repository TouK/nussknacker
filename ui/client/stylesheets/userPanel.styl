@import "./_variables.styl"

#espLeftNav,
#espRightNav
  width: sidebarWidth
  overflow: hidden

  .tab-content
    margin-top 10px
  hr
    border-top 1px solid hrColor
    margin-top 10px
    margin-bottom 10px

sidenavMixin()
  z-index: 1
  position: absolute
  top: 0
  bottom: 0
  background-color: panelBkgColor
  overflow-x: hidden
  & a
    white-space: pre

.sidenav,
.rightSidenav
  transition: left 0.5s ease, right 0.5s ease;

.sidenav
  sidenavMixin()
  left: -(sidebarWidth)

  &.is-opened
    left: 0

.rightSidenav
  sidenavMixin()
  right: -(sidebarWidth)

  &.is-opened
    right: 0

  #right-panel-tabs .tab-content
    padding 0px 15px 0px 15px
    button
      display block
      margin-bottom 5px
  .global
    display inline-flex
    .global-process-info
      display inline-block
      margin-left buttonPadding
      margin-top buttonPadding
      width (buttonPadding * 2 + buttonSize * 2)px
      p
        font-size 14px
        font-weight lighter

    .global-buttons
      display inline-block

// Accordion styles
// overwriting default styles of the component
.panel-default, .panel-heading
  background-color: panelHeaderBkgColor !important
  border: none !important
  border-radius: 0 !important
.panel-heading
  cursor: pointer
  height: panelHeaderHeight
  padding: 0 !important
  .panel-title
    color: panelTitleTextColor
    font-size: panelHeaderFontSize
  a
    padding 5px 0 0 buttonPadding
    text-decoration: none !important
    display: block
    width: 100%
    height: 100%

.panel-state
  padding: 10px 7px 10px 22px
  .state-icon
    display inline-block
    width 32px
    height 32px
  .state-text
    display inline-block
    margin-left 7px
    font-size: 14px
    font-weight: bold
    color: #b3b3b3
    vertical-align middle
    .process-name
      overflow: hidden;
      text-overflow: ellipsis;
      max-width: 215px;
      white-space: pre;
    .state-description
      font-size: 12px
      font-weight: lighter

.panel-properties
  padding: 0 0 0 buttonPadding
  margin-top 7px
  margin-bottom 7px
  .business-switch-text
    padding-left: 5px
    font-weight: lighter
    vertical-align bottom
    cursor pointer

.panel-body
  padding: 0 0 0 buttonPadding !important
  background-color: panelBkgColor
  border: none !important


.panel
  margin-bottom: 1px !important
  box-shadow: none !important
.panel + .panel
  margin-top: 0 !important

.panel-comment
  margin-top 1px
  font-size 12px
  word-break break-word
  p
    width: 90%
    margin-left: 0
    margin-right: 0

.sideNodeDetails
  padding: 0 buttonPadding 0 0 !important
  .node-label
    display: block
    font-weight: bold
    margin-bottom: 5px
    text-transform capitalize
  .node-key
    display: inline
    font-style: italic
    text-transform capitalize
  .node-value
    display: inline
    word-wrap: break-word
  button
    margin-top 10px

.dropZone
  cursor: pointer
  height: 33
  //TODO: can it be done automatically?
  padding-top 6
  margin-bottom 5
  div
    text-align center

.thumbVertical
  background-color scrollbarColor

.floating
  position: fixed
  top: menuBarHeight
  transition left 0.5s ease, right 0.5s ease
  z-index: 100
  padding-top 10px

  &.right
    right: 0

  &.is-opened
    right: sidebarWidth

  &.left
    left: 0
    &.is-opened
      left: sidebarWidth

.zoom-in-out
  @extend .floating
  padding-right 10px
  padding-top 8px
  display inline-flex

.zoom
    cursor: pointer
    margin-left 2px
