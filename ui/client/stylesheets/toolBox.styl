@import "./_variables.styl"

grabbingMixin()


grabMixin()
  cursor: -moz-grab
  cursor: -webkit-grab
  cursor: grab
  &:active
    cursor: -moz-grabbing;
    cursor: -webkit-grabbing;
    cursor: grabbing;

#toolbox
  font-size 16px
  font-weight lighter
  margin-left -15px
  margin-right 10px
  .tree-view_item
    border 1px solid listBorderColor
    span
      cursor: pointer
    &.disabled
      opacity 0.4
      cursor: not-allowed !important
    &:hover
      background-color toolHoverBkgColor
  .toolWrapper
    margin-left 17px
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis
  .tool
    grabMixin()
    margin-left -17px
    margin-bottom -1px
    img
      margin-left 15px
    height 27px
    line-height @height
    border 1px solid listBorderColor
    &:hover
      background-color toolHoverBkgColor
  .toolIcon
    height 16px
    display inline-block
    vertical-align middle
    svg
      height 16px
      margin-top -1px