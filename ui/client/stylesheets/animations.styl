:local
	.fade //placeholder for idea
		opacity inherit

	.group
		position relative
		width 100%
		height 100%

:local(.fade)
	&-exit
	&-enter
		:local(.group) > &
			position absolute
			top 0
			bottom 0
			left 0
			right 0

	&-enter
		& > *
			opacity 0

		&\&-active
			& > *
				opacity 1
				transition opacity 300ms ease-in

	&-exit
		opacity 1

		&\&-active
			opacity 0
			transition opacity 300ms ease-in

