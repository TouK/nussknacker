$border-radius-small = $border-radius-base

$input-border-focus = primary

@require "~bootstrap/bootstrap/variables.styl"

formControllHeight = $input-height-large

containerPadding = 25px

focusColor = $input-border-focus

menuActiveItem = rgba(0, 0, 0, 0.3)
menuButtonBorderColor = #666666
menuButtonActiveBKColor = #5d5d5d
menuButtonBk = #808080
menuBarHeight = 50px
menuBkgColor = #333333
menuTxtColor = #FFFFFF

buttonBkgColor = #4d4d4d
buttonBkgHover = #444444
buttonTextColor = #cccccc
buttonBorderColor = #666666
buttonPadding = 22px
buttonSize = 72px
buttonSmallSize = 48px

sidebarWidth = 290px
panelBackground = #4D4D4D
panelHeaderBackground = #3e3e3e
panelText = #cccccc
panelHeaderText = #b3b3b3
panelHeaderTextSize = 10px
panelBorder = panelHeaderBackground
toolbarsGap = 3px
scrollThumbSize = 8px
panelWidth = sidebarWidth + scrollThumbSize

graphBkgColor = #b3b3b3
panelBkgColor = #444444
defaultTextColor = #ccc
panelTitleTextColor = #808080
panelHeaderHeight = 26px
panelHeaderFontSize = 12px
rightPanelButtonFontSize = 11px

processesTableHeaderColor = #E0E0E0
processesTableEvenColor = #F5F5F5
processesTableOddColor = #FFFFFF
processesSearchInput = #FFFFFF
processesTopBar = #FFFFFF

processesHoverColor = #b3b3b3

buttonBlueBkgColor = #0E9AE0
buttonBlueColor = #FFFFFF

infoColor = #cccccc
warningColor = #FF9A4D
errorColor = #f25c6e
okColor = #8fad60
sucessColor = #64d864

scrollbarColor = #666666

toolHoverBkgColor = #444444
toolHoverColor = #ccc
labelBkgColor = #333333
commentBkgColor = #333333
commentBorderColor = #808080
commentHeaderColor = #afafaf


modalHeaderHeight = 30px
modalHeaderWidth = 86px
modalBkgColor = panelBkgColor
modalInputBkgColor = #333333
modalInputTextColor = #cccccc
modalLabelTextColor = #999999
modalFooterBkgColor = #3a3a3a
modalFooterHeight = 51px
