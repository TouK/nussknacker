modalMaxWidth = 800px
modalContentMaxHeight = modalMaxHeight - modalHeaderHeight - modalFooterHeight - 9 ////don't know why -9, but without it modal with scrollbar has weird footer and its edges come outside of modal
modalConfirmButtonColor = okColor
modalBorder = #222
docsIconColor = modalBorder
docsIconColorHover = modalLabelTextColor

testResultsColor = okColor
markColor = okColor

listBorderColor = #434343

hrColor = #777


:export {
	modalContentMaxHeight: modalContentMaxHeight
	focusColor: focusColor
	borderRadius: $border-radius-base
	formControllHeight: formControllHeight
	fontSize: $font-size-base

	primary: primary
	warningColor: warningColor
	errorColor: errorColor
	okColor: okColor
	sucessColor: sucessColor
}
