@import "./_variables.styl"

.notifications-wrapper
  position absolute
  top 79
  right 310
  z-index 1000

  .notification
    background-color: #4D4D4D
    cursor pointer
    width: 300px
    max-height 400px
    font-family "Open Sans"
    font-size: 16
    display flex
    color #b3b3b3
    .notification-dismiss
      display none
    &.notification-hidden
      display none
    &.notification-success
      border-bottom: solid 2px sucessColor
      margin-bottom 10px
    &.notification-error
      border-bottom: solid 2px errorColor
      margin-bottom 10px
    .icon
      min-width 16px
      min-height 16px
      margin-top 5px
      order: -1
      width: 16px
      height: 16px
      margin-right 10px
      margin-left 10px
      margin-bottom 5px
    .notification-details
      padding-top 1px
    .notification-text
      display block
      max-width 234px
      overflow hidden
      word-wrap break-word
    .dismiss-icon
      fill #cccccc
      background-color #3a3a3a
      width 16px
      min-width 16px
      height 16px
  .notification-container
    padding 5px 0