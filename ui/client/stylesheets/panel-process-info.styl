@import "./_variables.styl"

.panel-process-info
  display flex
  padding: 15px 10px
  .process-info-icon
    display inline-block
    width 32px
    height 32px
    filter invert() hue-rotate(180deg) saturate(500%) brightness(120%)
  .process-info-text
    display inline-block
    margin-left 7px
    font-size: 14px
    font-weight: bold
    color: #b3b3b3
    vertical-align middle
    .process-name
      overflow: hidden;
      text-overflow: ellipsis;
      max-width: 215px;
      white-space: pre;
    .process-info-description
      font-size: 12px
      font-weight: lighter

.panel-properties
  padding 15px
  .business-switch-text
    padding-left: 5px
    font-weight: lighter
    vertical-align bottom
    cursor pointer

.panel-comment
  margin-top 1px
  font-size 12px
  word-break break-word
  p
    width: 90%
    margin-left: 0
    margin-right: 0

:local
  .sideNodeDetails
    padding 0 10px 5px 10px
    .node-label
      display: block
      font-weight: bold
      margin-bottom: 5px
      text-transform capitalize
    .node-key
      display: inline
      font-style: italic
      text-transform capitalize
    .node-value
      display: inline
      word-wrap: break-word
    button
      margin-top 10px

.dropZone
  cursor: pointer
  height: 33
  //TODO: can it be done automatically?
  padding-top 6
  margin-bottom 5
  div
    text-align center

.thumbVertical
  background-color scrollbarColor

.floating
  position: absolute
  top: 0
  transition left 0.5s ease, right 0.5s ease
  z-index: 100
  padding-top 10px

  &.right
    right: 0

  &.is-opened
    right: sidebarWidth

  &.left
    left: 0
    &.is-opened
      left: sidebarWidth

.zoom-in-out
  @extend .floating
  padding-right 10px
  padding-top 8px
  display inline-flex

.zoom
    cursor: pointer
    margin-left 2px
