@require "../../stylesheets/_variables.styl"

buttonBkgColor = #444444
buttonTextColor = #b3b3b3

:local
    .button
        position relative
        width buttonSize
        min-width buttonSize
        height @width
        border 1px solid panelBorder
        padding 0

        font-weight 600
        font-size rightPanelButtonFontSize

        display flex
        flex-direction column
        align-items center
        justify-content center

        background-color buttonBkgColor
        color buttonTextColor
        transition background-color 0.2s

        cursor pointer

        &.disabled
            opacity 0.3
            cursor not-allowed

        &:not(.disabled):hover
            background-color buttonBkgHover

        .icon
            width (buttonSize / 2)

        &:focus
            outline 2px solid focusColor
            outline-offset -1px
            z-index 10000

    .has-error
        &.button
            border-color errorColor
        .icon svg *
            fill errorColor
        .label
            color errorColor

    .is-active
        .icon svg *
            fill okColor
        .label
            color okColor

    .small
        width buttonSmallSize
        min-width buttonSmallSize
        height @width

        .label
            display none
