@require "../stylesheets/darkColors.styl"

tableFontSize = $font-size-base
defaultBackground = transparent
defaultBorder = #ccc

.tab-content-page
	:local
		.tools
			display flex
			justify-content space-between
			align-items flex-start

			border-width 0 1px 1px 1px
			border-style solid
			margin-bottom marginSize

			background defaultBackground
			border-color defaultBorder


		.group
			display flex
			justify-content stretch
			align-items flex-start
			flex-wrap wrap

		.expand
			flex-grow 1
			max-width 75%

		.table
			margin 0

			thead > tr
				& > th
					padding .5em 1em
					text-transform uppercase
					font-size tableFontSize
					font-weight normal

			thead
			tbody:first-of-type
				tr
					th
					td
						border-style solid
						border-width 1px 0 0 0
						border-color transparent

						&:first-child
							border-left-width 1px

						&:last-child
							border-right-width 1px

					&:last-child td
						border-bottom-width 1px

					:global(td.edit-column)
						border-left-width 1px
						border-right-width 1px

			tbody:first-of-type > tr
				& > td
					padding 0 1em
					height 3.25em
					font-size tableFontSize
					font-weight normal

				.icon-only
					padding 0
					& > *
						width 100%
						height 100%
						display flex
						align-items center
						justify-content center

.dark-theme
	:local
		.tools
			background dark3
			border-color dark1
			border-radius 0 borderRadius borderRadius borderRadius

		.group
			padding (marginSize / 2)


		.filter-input
		.filter-button
			margin (marginSize / 2)

		.table
			thead > tr
				background transparent

				& > th
					color light4
					background dark2

				&:first-child
					& > th:first-child
						border-radius borderRadius 0 0 0

					& > th:last-child
						border-radius 0 borderRadius 0 0

			tbody > tr
				background transparent

			thead
			tbody:first-of-type
				tr
					th
					td
						border-color dark2

			tbody:first-of-type > tr
				& > td
					color light1
					background dark3

				&:nth-child(2n) > td
					background dark4

				&:last-child
					& > td:first-child
						border-bottom-left-radius borderRadius

					& > td:last-child
						border-bottom-right-radius borderRadius

				a:hover
					background base

	img.state-icon
		filter invert() hue-rotate(180deg) saturate(500%) brightness(120%)

	.icon-fill
		fill dark
