{
  "baseUrl": "http://localhost:3000",
  "ignoreTestFiles": [
    "**/__snapshots__/*",
    "**/__image_snapshots__/*"
  ],
  "env": {
    "cypress-plugin-snapshots": {
      "imageConfig": {
        "resizeDevicePixelRatio": false,
        "threshold": 0.004
      },
      "screenshotConfig": {
        "scale": false
      },
      "backgroundBlend": "overlay",
      "updateSnapshots": false
    }
  },
  "reporter": "junit",
  "reporterOptions": {
    "mochaFile": "cypress-test-results/[hash].xml",
    "toConsole": false
  },
  "defaultCommandTimeout": 10000
}
